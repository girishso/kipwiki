    = stylesheet_link_tag "colorbox", "slider", "projects","editor","global"
    = javascript_include_tag "jquery", "easySlider1.7", "application","jquery-ui-1.8.6.custom.min.js","slides.min.jquery.js" 
    = javascript_include_tag "google-maps", :src => "http://maps.google.com/maps/api/js?libraries=geometry&sensor=true"
    = csrf_meta_tag
    = yield(:head)
    :javascript
      $(document).ready(function() {
      	//When page loads...
      	$(".tab_content").hide(); //Hide all content
      	$(".leftTabContent").hide();
      	$("ul.tabs li:first").addClass("active").show(); //Activate first tab
      	$(".tab_content:first").show(); //Show first tab content
      	$(".leftTabContent:first").show();
  
      	//On Click Event
      	$("ul.tabs li").click(function() {
  
      		$("ul.tabs li").removeClass("active"); //Remove any "active" class
      		$(this).addClass("active"); //Add "active" class to selected tab
      		$(".tab_content").hide(); //Hide all tab content
      		$(".leftTabContent").hide();
  
      		var activeTab = $(this).find("a").attr("href"); //Find the href attribute value to identify the active tab + content
      		var leftActiveTab = $(this).find("a").attr("title");
      		$(activeTab).fadeIn(); //Fade in the active ID content
      		$(leftActiveTab).fadeIn();
      		return false;
      	});
  
      .clr
      });
  
    
      $(function(){
      			$('#slides').slides({
      				preload: true,
      				play: 5000,
      				pause: 2500,
      				hoverPause: true,
      				animationStart: function(current){
      					$('.caption').animate({
      						bottom:0
      					},100);
      					if (window.console && console.log) {
      						// example return of current slide number
      						console.log('animationStart on slide: ', current);
      					};
      				},
      				animationComplete: function(current){
      					$('.caption').animate({
  						
      					},200);
      					if (window.console && console.log) {
      						// example return of current slide number
      						console.log('animationComplete on slide: ', current);
      					};
      				},
      				slidesLoaded: function() {
      					$('.caption').animate({
      						bottom:0
      					},200);
      				}
      			});
      		});
  
  
  
