

- content_for :search do
  = render "layouts/search_projects"

#content
  = render :partial => "map_global_projects"
  .fatureProjectsWrapper
    %h2 Featured Projects
    .clr
      %ul
        - @featured_projects.each do |project|
          %li
            .heading
              = link_to project.title, show_project_path(project.city, project.slug)
            .imageWrapper
              %img{:alt => "", :height => "75", :src => "/images/resultBg.jpg", :width => "100"}/
            .addressWrapper
              .heading
                = project.address
              .heading
                Project Manager
                %span
                  %small> *
                  = project.manager 
            .textWrapper
              .clr
              = raw truncate(sanitize(project.description), :length => 100)
              %a{:href => "#"} more
            .voteViewMurge
              .leftSide
                .planningLoader
                  .planningLoading
                %span 
                  = project.status 
              .viewWrapper.martowSite
                = project.view_count
              .rightSide
                %img{:height => "20", :src => "/images/fbLikeBg.jpg", :width => "88"}/
              .clr
    .clr
  .fatureProjectsWrapper
    %h2 Local Projects
    .clr
      %ul
        - @local_projects.each do |project| 
          %li
            .heading
              = link_to project.title, show_project_path(project.city, project.slug)
            .imageWrapper
              %img{:alt => "", :height => "75", :src => "images/resultBg.jpg", :width => "100"}/
            .addressWrapper
              .heading
                = poject.address
              .heading
                Project Manager:
                %span
                  %small> *
                  = project.manager
            .textWrapper
              .clr
              = raw truncate(sanitize(project.description), :length => 100)
              %a{:href => "#"} more
            .voteViewMurge
              .leftSide
                .planningLoader
                  .planningLoading
                %span
                  = project.status 
              .viewWrapper.martowSite
                = project.view_count
              .rightSide
                %img{:height => "20", :src => "images/fbLikeBg.jpg", :width => "88"}/
              .clr
            .clr
        .clr



