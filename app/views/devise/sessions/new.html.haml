.signupContent
  .signupLogo
  .loginText Login / Sign In
  .clr
  .signupBorder
  .signupFieldWrapper
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %label Email
      %span
      .clr
      = f.email_field :email , :class => "field signpFiled" 
      .clr
      %label Password
      %span
        = link_to "Forgot Password", new_user_password_path
      .clr
      = f.password_field :password , :class => "field signpFiled"
      .clr
      .marTop10
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        Remember me
      .clr
      .leftSide
        .leftSide
          %input.submitbg{:name => "", :type => "submit", :value => "Login"}/
        .marLeft10.rightSide.marTop25
          Don't have an account?
          = link_to "Sign Up" , new_user_registration_path
      .clr
